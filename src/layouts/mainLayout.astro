---
const { title } = Astro.props;
import "../styles/globals.css";
---

<html lang="en" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/webp" href="/favicon.webp" sizes="64x64" />
        <link rel="icon" type="image/webp" href="/android-chrome.webp" sizes="192x192" />
        <link rel="apple-touch-icon" type="image/webp" href="/apple-touch-icon.webp" sizes="180x180" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Rayh4ze is an seasoned mobile developer specializing in Android development."
        />
        <meta name="author" content="Rayh4ze />
        <meta
            name="keywords"
            content="Rayh4ze, Rayhan77, Mobile Developer, Mobile, Kotlin, Android Studio, web development, mobile development, Android development"
        />
        <meta
            property="og:title"
            content="Rayh4ze - Mobile Developer"
        />
        <meta
            property="og:description"
            content="Rayh4ze is an seasoned mobile developer specializing in Android development."
        />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Rayh4ze - Mobile Developer" />
        <meta property="og:locale" content="en_US" />
        <title>{title}</title>
    </head>
    <body class="bg-light-fondo-primary dark:bg-dark-fondo-primary">
        <slot />
        <script>
            const darkThemeMq = window.matchMedia(
                "(prefers-color-scheme: dark)"
            );
            if (darkThemeMq.matches) {
                document.body.classList.add("dark");
                document.documentElement.classList.add("dark");
            } else {
                document.body.classList.remove("dark");
                document.documentElement.classList.remove("dark");
            }
        </script>
    </body>
</html>
